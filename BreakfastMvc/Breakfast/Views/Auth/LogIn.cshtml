@model Breakfast.ViewModels.Account

<div class="form">

    <ul class="tab-group">
        <li class="tab active"><a href="#signup">Sign Up</a></li>
        <li class="tab"><a href="#login">Log In</a></li>
    </ul>

    <div class="tab-content">
        <div id="signup">
            <h1>Sign Up for Free</h1>
            @using (Html.BeginForm("Register", "Auth", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
            {
                <div class="top-row">
                    <div class="field-wrap">
                        <label>
                            E-mail<span class="req">*</span>
                        </label>
                        @Html.TextBoxFor(m => m.register.Email)
                    </div>
                    <div class="field-wrap">
                        <label>
                            Password<span class="req">*</span>
                        </label>
                        @Html.TextBoxFor(m => m.register.Password)
                    </div>
                </div>

                <div class="field-wrap">
                    <label>
                        Address<span class="req">*</span>
                    </label>
                    @Html.TextBoxFor(m => m.register.Address)
                </div>

                <div class="field-wrap">
                    <label>
                        Zipcode<span class="req">*</span>
                    </label>
                    @Html.TextBoxFor(m => m.register.Zipcode)
                </div>

                <div class="field-wrap">
                    <label>
                        Work Address<span class="req">*</span>
                    </label>
                    @Html.TextBoxFor(m => m.register.WorkAddress)
                </div>

                <button type="submit" class="button button-block" value="Sign Up"/>
                }
        </div>
        <div id="login">
            <h1>Welcome Back!</h1>
            <form action="/" method="post">
                <div class="field-wrap">
                    <label>
                        Email Address<span class="req">*</span>
                    </label>
                    @Html.TextBoxFor(m => m.login.Email)
                </div>
                <div class="field-wrap">
                    <label>
                        Password<span class="req">*</span>
                    </label>
                    @Html.TextBoxFor(m => m.login.Password)
                </div>
                <p class="forgot"><a href="#">Forgot Password?</a></p>
                <button type="submit" class="button button-block">Log In</button>
            </form>
        </div>
    </div>
</div>