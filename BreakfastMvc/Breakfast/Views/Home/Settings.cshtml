@using Breakfast.Areas.Traffic.Models
@model Breakfast.ViewModels.RootObject

<link rel="stylesheet" href="~/Content/SettingsPage.css">
<script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>
<script src="~/Scripts/tabs.js"></script>

<div class="wrap">

    <ul class="tabs group">
        <li><a class="active" href="#/one">Weather</a></li>
        <li><a href="#/two">Traffic</a></li>
        <li><a href="#/three">News</a></li>
    </ul>

    <div id="content">
        <div id="one">@Html.Partial("~/Areas/Weather/Views/OpenWeatherMap/Settings.cshtml", Model.Weather)</div>
        <div id="two">@Html.Partial("~/Areas/Traffic/Views/Traffic/Settings.cshtml", (TrafficSettingsViewModel)Model.Traffic)</div>
        <div id="three">@Html.Partial("~/Areas/News/Views/Settings.cshtml",Model.News)</div>
    </div>

</div>